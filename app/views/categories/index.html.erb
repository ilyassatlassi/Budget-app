<section class="container">
<div class="header">
  <%= link_to "<i class='fas fa-arrow-left'></i>".html_safe, :back, class: "back" %>
  <h1>Categories</h1>
  <%= form_for(current_user, url: destroy_user_session_path, method: :delete, html: { class: "nav-link" }) do |f| %>
    <%= f.button type: :submit, class: "btn-logout" do %>
      <%= content_tag :i, "", class: "fa-solid fa-right-from-bracket" %>
    <% end %>
  <% end %>
<h1>Categories</h1>


<% @categories.each do |category| %>
  <div class="category-item">
    <h3><%= category.name %></h3>
    <p>Icon: <%= category.icon %></p>
    <p>Total Amount: <%= category.total_amount %></p>
    <%= link_to 'View Transactions', category_transactions_path(category) %>
    <%= button_to 'Delete', category_path(category), method: :delete, data: { confirm: 'Are you sure you want to delete this category?' } %>
  </div>
<% end %>

<%= link_to 'Add a New Category', new_category_path %>

</section>
